<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".Lecture_Final">
    <Button
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/ic_arrow_back"
        android:id="@+id/btnFinalBack"
        android:layout_margin="30dp"
        android:background="@drawable/roundb"
        android:text="Back"
        android:textColor="#000"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:typeface="serif"
            android:textStyle="bold"

            android:text="Final Period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/finalone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/roundb_forspinner"
            android:text="Basic Input / Output"
            android:textColor="#000" />

        <Button
            android:id="@+id/finaltwo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundb_forspinner"
            android:text="Swing"
            android:textColor="#000" />

        <Button
            android:id="@+id/finalthree"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundb_forspinner"
            android:text="Applets"
            android:textColor="#000" />




    </LinearLayout>
</RelativeLayout>